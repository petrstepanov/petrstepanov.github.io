		var etalMaxNumber = 2;
		var etal = citation.author.length > etalMaxNumber;
		if (etal){
			citation.author.length = etalMaxNumber;
		}
		for (var i=0; i < citation.author.length; i++){
			const author = citation.author[i];
			%><%- author.given %> <%- author.family %><%- i < citation.author.length-1 ? ', ' : etal ? ' et al. ' : '. ' %><%
		}

		// Print Title
		citation.title = citation.title.replaceAll('<sub>3</sub>','₃');
		citation.title = citation.title.replaceAll('<sup>+</sup>','⁺');
		citation.title = citation.title.replaceAll('Al2O3','Al₂O₃');
		citation['container-title'] = citation['container-title'].replaceAll('INTERNATIONAL CONFERENCE ON SCIENCE AND APPLIED SCIENCE (ICSAS) 2019','AIP Conference Proceedings 2182');
		
		%><%- citation.title %>. <%

		// Print Journal
		%>*<%- citation['container-title'] %>*<%

		// Print year
		%> **<%- citation.published['date-parts'][0][0] %>**<%

		// Print volume
		if (citation.volume){
			%>, <%- citation.volume %><%
		}

		// Print issue
		if (citation.issue){
			%> (<%- citation.issue %>)<%
		}

		// Print page
		if (citation.page){
			%>, <%- citation.page %><%
		}

		// Print DOI
		%>. [<%- citation.DOI %>](<%- citation.URL %>).
	<% }
